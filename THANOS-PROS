

_get_repolink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    if [[ $SURTURBOT_REPO == "THANOS-PRO" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL1NVUlRVUkJPVC9USEFOT1MtVVNFUkJPVC9hcmNoaXZlL1RIQU5PUy56aXA=" | base64 -d
    elif [[ $SURTURBOT_REPO == "THANOS-PRO" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL1NVUlRVUkJPVC9USEFOT1MtVVNFUkJPVC9hcmNoaXZlL1RIQU5PUy56aXA=" | base64 -d
    elif [[ $SURTURBOT_REPO =~ $regex ]]
    then
        if [[ $SURTURBOT_REPO_BRANCH ]]
        then
            echo "${SURTURBOT_REPO}/archive/${SURTURBOT_REPO_BRANCH}.zip"
        else
            echo "${SURTURBOT_REPO}/archive/THANOS.zip"
        fi
    else
        echo "aHR0cHM6Ly9naXRodWIuY29tL1NVUlRVUkJPVC9USEFOT1MtVVNFUkJPVC9hcmNoaXZlL1RIQU5PUy56aXA=" | base64 -d
    fi
}


_pro_bot () {
    local zippath
    zippath="THANOS.zip"
    echo "  üíï Downloading Ôº¥Ôº®ŒõÔºÆ‚ô¢Ôº≥ÔºçÔº∞Ôº≤‚ô¢ Source Code... üíï"
    wget -q $(_get_repolink) -O "$zippath"
    echo "  üíìUnpacking Data...üíì"
    THANOSPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo " üíî Download Complete Now Installing üíî"
    echo "  ‚ö° INSTALLING Ôº¥Ôº®ŒõÔºÆ‚ô¢Ôº≥ÔºçÔº∞Ôº≤‚ô¢ ‚ö°"
    rm -rf "$zippath"
    sleep 5
    cd $THANOSPATH
    echo "    ‚ö°Starting Ôº¥Ôº®ŒõÔºÆ‚ô¢Ôº≥ÔºçÔº∞Ôº≤‚ô¢‚ö°     "
    echo " üíû NOW WAIT 3 MIN INSTALLING ALL THANOS PLUGIN üíû"

    python3 ../setup/updater.py ../requirements.txt requirements.txt
    python3 -m thanospros
}

_pro_bot
